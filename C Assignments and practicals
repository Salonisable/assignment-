  38) Create an array of characters dynamically using malloc function.
  ANS:#include<stdio.h>
#include<stdlib.h>

int main()
{
	int n;
	printf("enter no of elements in array :");
	scanf("%d",&n);
	
	char *p=(char*) malloc(n*sizeof(char ));
	int i;
	
	for(i=0;i<n;i++)
	{
		printf("Enter characters  %d :",i+1);
		scanf("%c",&p[i]);
	}
	
	for(i=0;i<n;i++)
	{
		printf("%c ",p[i]);
	}
	
}
